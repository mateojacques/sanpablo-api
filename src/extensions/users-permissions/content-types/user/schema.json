{
  "kind": "collectionType",
  "collectionName": "up_users",
  "info": {
    "singularName": "user",
    "pluralName": "users",
    "displayName": "User",
    "description": "Extended application user"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {
    "" : {}
  },
  "attributes": {
    "username": {"type": "string", "minLength": 3, "unique": true, "required": true},
    "email": {"type": "email", "minLength": 6, "lowercase": true, "required": true, "unique": true},
    "password": {"type": "password", "minLength": 8},
    "provider": {"type": "string"},
    "resetPasswordToken": {"type": "string", "configurable": false},
    "confirmationToken": {"type": "string", "configurable": false},
    "confirmed": {"type": "boolean", "default": false},
    "blocked": {"type": "boolean", "default": false},
    "role": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "plugin::users-permissions.role",
      "inversedBy": "users"
    },
    "firstName": {"type": "string", "required": true},
    "lastName": {"type": "string", "required": true},
    "fullName": {"type": "string"},
    "phone": {"type": "string"},
    "addresses": {"type": "component", "repeatable": true, "component": "shared.address"},
    "defaultShippingAddressIndex": {"type": "integer"},
    "defaultBillingAddressIndex": {"type": "integer"},
    "orderCount": {"type": "integer", "default": 0},
    "lastOrderDate": {"type": "datetime"},
    "metadata": {"type": "json"}
  }
}
